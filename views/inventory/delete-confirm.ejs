<h1 class="delete-inventory"><%= title %></h1>

<% if (messages && Object.keys(messages).length > 0) { %>
    <ul class="notice">
      <% Object.keys(messages).forEach(type => { %>
        <% messages[type].forEach(msg => { %>
          <li class="<%= type %>"><%= msg %></li>
        <% }) %>
      <% }) %>
    </ul>
<% } %>

<div class="form-frame">
    <p></p>
    <p>Confirm Deletion - The delete is permanent.</p>
    <form class="form" action="/inv/delete-confirm" method="POST" id="updateForm">
        <!-- Make -->
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" id="inv_make" required 
        value="<%= locals.inv_make || '' %>"
        pattern="^[A-Za-z][A-Za-z0-9 \-]{1,}[A-Za-z]$"
        title="Must be at least 3 characters (start & end with a letter)"
        placeholder="Min of 3 letters"
        readonly>

        <!-- Model -->
        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" id="inv_model" required 
        value="<%= locals.inv_model || '' %>"
        pattern="^[A-Za-z0-9.'+ \-]+$"
        title="Must be at least 1 character"
        placeholder="Min of 1 character"
        readonly>
        
        <!-- Year -->
        <label for="inv_year">Year:</label>
        <input type="number" step="1" min="1800" max="9999" name="inv_year" id="inv_year" required 
        value="<%= locals.inv_year || '' %>"
        title="Must be 4-digit year"
        placeholder="4-digit year"
        readonly>
        
        
        <button type="submit">Delete</button>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>