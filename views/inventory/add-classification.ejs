<h1 class="add-classification"><%= title %></h1>

<% if (messages && Object.keys(messages).length > 0) { %>
    <ul class="notice">
      <% Object.keys(messages).forEach(type => { %>
        <% messages[type].forEach(msg => { %>
          <li class="<%= type %>"><%= msg %></li>
        <% }) %>
      <% }) %>
    </ul>
<% } %>

<div class="form-frame">
    <form class="form" action="/inv/add-classification" method="POST">
        <h3>The new classification name cannot contain a space or special character of any kind</h3>
        <label for="classification_name">Classification Name:</label>
        <input type="text" name="classification_name" id="classification_name" required
            pattern="^[a-zA-Z]+$" title="Cannot contain a space or special character of any kind"
            value="<%= locals.classification_name || '' %>">
        <button type="submit">Add Classification</button>
    </form>
</div>