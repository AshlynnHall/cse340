<h1 class="acctTitle"><%= title %></h1>

<% if (messages && Object.keys(messages).length > 0) { %>
    <ul class="notice">
      <% Object.keys(messages).forEach(type => { %>
        <% messages[type].forEach(msg => { %>
          <li class="<%= type %>"><%= msg %></li>
        <% }) %>
      <% }) %>
    </ul>
<% } %>

<!-- Greet the user based on account type -->
<h2>Welcome <%= accountData.account_firstname %></h2>

<!-- Update account information link -->
<p>
  <a href="/account/update/<%= accountData.account_id %>" title="Update your account information">Update Account Information</a>
</p>

<!-- Render Inventory Management link only for Employee or Admin -->
<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/" title="Access Inventory Management">Manage Inventory</a>
  </p>
<% } %>